<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Categories - The Black Market</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            background-color: #000000;
            color: white;
        }
        .category-card {
            background-color: #111827;
            border-radius: 12px;
            padding: 20px;
            transition: 0.2s;
            cursor: pointer;
        }
        .category-card:hover {
            transform: scale(1.03);
            background-color: #1f2937;
        }
        .category-title {
            font-size: 1.4rem;
            font-weight: bold;
        }
    </style>
</head>

<body>

    <%- include('partials/header') %>

    <div class="container mt-5">

        <h1 class="mb-3 fw-bold">Shop by Category</h1>
        <p class="text-muted mb-4">Choose a category to start shopping</p>

        <div class="row g-4">

            <!-- Fresh Produce -->
            <div class="col-md-4">
                <a href="/freshproduce" class="text-decoration-none text-white">
                    <div class="category-card text-center shadow">
                        <h3 class="category-title">Fresh Produce</h3>
                    </div>
                </a>
            </div>

            <!-- Bakery -->
            <div class="col-md-4">
                <a href="/bakery" class="text-decoration-none text-white">
                    <div class="category-card text-center shadow">
                        <h3 class="category-title">Bakery</h3>
                    </div>
                </a>
            </div>

            <!-- Dairy & Eggs -->
            <div class="col-md-4">
                <a href="/dairy_eggs" class="text-decoration-none text-white">
                    <div class="category-card text-center shadow">
                        <h3 class="category-title">Dairy & Eggs</h3>
                    </div>
                </a>
            </div>

            <!-- Meat & Seafood -->
            <div class="col-md-4">
                <a href="/meat_seafood" class="text-decoration-none text-white">
                    <div class="category-card text-center shadow">
                        <h3 class="category-title">Meat & Seafood</h3>
                    </div>
                </a>
            </div>

            <!-- Frozen Food -->
            <div class="col-md-4">
                <a href="/frozenfood" class="text-decoration-none text-white">
                    <div class="category-card text-center shadow">
                        <h3 class="category-title">Frozen Food</h3>
                    </div>
                </a>
            </div>

            <!-- Beverages -->
            <div class="col-md-4">
                <a href="/beverages" class="text-decoration-none text-white">
                    <div class="category-card text-center shadow">
                        <h3 class="category-title">Beverages</h3>
                    </div>
                </a>
            </div>

        </div>
    </div>

</body>
</html>
