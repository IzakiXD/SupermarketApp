<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Payment - The Black Market</title>

  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  >
</head>

<body class="bg-dark text-white">

  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm bg-black navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">The Black Market</a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- PAYMENT SUMMARY -->
  <div class="container mt-5 mb-5">

    <h2 class="mb-4">Payment Summary</h2>

    <div class="row">

      <!-- LEFT: ORDER DETAILS -->
      <div class="col-md-6">
        <div class="bg-secondary p-4 rounded mb-4">

          <h4>Order Details</h4>

          <table class="table table-dark table-striped mt-3 mb-0">
            <tbody>
              <tr>
                <th scope="row">Payment ID</th>
                <td>#<%= payment.paymentID %></td>
              </tr>
              <tr>
                <th scope="row">Customer</th>
                <td><%= payment.name %></td>
              </tr>
              <tr>
                <th scope="row">Amount</th>
                <td>$<%= Number(payment.amount).toFixed(2) %></td>
              </tr>
              <tr>
                <th scope="row">Status</th>
                <td>
                  <span class="badge bg-warning text-dark">
                    <%= payment.status %>
                  </span>
                </td>
              </tr>
            </tbody>
          </table>

        </div>
      </div>

      <!-- RIGHT: PAYMENT OPTIONS -->
      <div class="col-md-6">
        <div class="bg-secondary p-4 rounded">

          <h4>Choose Payment Method</h4>
          <p class="text-light small mb-3">
            Please select a payment method to complete your order.
          </p>

          <!-- CARD PAYMENT -->
          <a href="/payment/card/<%= payment.paymentID %>" 
             class="btn btn-primary btn-lg w-100 mb-3">
            Pay with Card
          </a>

          <!-- PAYPAL PAYMENT -->
          <a href="/payment/paypal/<%= payment.paymentID %>" 
             class="btn btn-warning btn-lg w-100 mb-3 d-flex align-items-center justify-content-center gap-2">
            <img 
              src="https://www.paypalobjects.com/webstatic/icon/pp258.png"
              alt="PayPal"
              style="height: 24px;"
            >
            Pay with PayPal
          </a>

          <!-- PAYNOW PAYMENT -->
          <a href="/payment/paynow/<%= payment.paymentID %>" 
             class="btn btn-outline-info btn-lg bg-white text-dark w-100">
            Pay with PayNow QR
          </a>

          <p class="mt-3 mb-0 text-muted small">
            * Select a payment method to continue.
          </p>

        </div>
      </div>

    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
