<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Payment Tracking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-dark text-white">

<div class="container mt-5">
    <h2 class="mb-4">All Payments</h2>

    <table class="table table-dark table-bordered table-striped">
        <thead>
            <tr>
                <th>Payment ID</th>
                <th>User</th>
                <th>Amount</th>
                <th>Method</th>
                <th>Status</th>
                <th>Date</th>
                <th>Receipt</th>
            </tr>
        </thead>

        <tbody>
            <% payments.forEach(p => { %>
                <tr>
                    <td><%= p.paymentID %></td>
                    <td><%= p.name %></td>
                    <td>$<%= Number(p.amount).toFixed(2) %></td>
                    <td><%= p.method || "N/A" %></td>
                    <td><%= p.status %></td>
                    <td><%= p.paymentdate %></td>
                    <td><a href="/receipt/<%= p.paymentID %>" class="btn btn-sm btn-info">View</a></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/admin" class="btn btn-secondary mt-3">Back to Dashboard</a>
</div>

</body>
</html>
