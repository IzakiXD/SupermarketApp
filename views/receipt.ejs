<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Receipt - The Black Market</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        /* Hide elements when printing */
        @media print {
            .no-print {
                display: none !important;
            }
            body {
                background: white !important;
                color: black !important;
            }
            .invoice-box {
                border: none !important;
                box-shadow: none !important;
            }
        }

        /* Invoice Styling */
        .invoice-box {
            background: #2b2b2b;
            border-radius: 12px;
            padding: 35px;
            color: white;
            box-shadow: 0 0 15px rgba(255,255,255,0.08);
        }

        .header-title {
            font-size: 32px;
            font-weight: bold;
            color: #ffc107;
        }

        .section-title {
            font-size: 20px;
            margin-top: 20px;
            border-bottom: 1px solid #555;
            padding-bottom: 6px;
            color: #ffc107;
        }

        .info-row p {
            margin: 4px 0;
        }
    </style>
</head>

<body class="bg-dark text-white">

    <div class="container mt-5 mb-5">

        <!-- Header -->
        <div class="text-center mb-4">
            <h2 class="header-title">Invoice</h2>
            <h5 class="text-light">The Black Market</h5>
            <p class="text-muted">Singapore â€¢ 24/7 Online Grocery & Essentials</p>
        </div>

        <div class="invoice-box">

            <!-- Invoice Number -->
            <div class="info-row">
                <p><strong>Invoice No:</strong> INV-<%= payment.paymentID %></p>
                <p><strong>Receipt ID:</strong> <%= payment.paymentID %></p>
                <p><strong>Date Issued:</strong> <%= payment.paymentdate %></p>
            </div>

            <hr>

            <!-- Customer Details -->
            <div class="section-title">Customer Information</div>
            <div class="info-row">
                <p><strong>Name:</strong> <%= payment.name %></p>
                <% if (payment.email) { %>
                    <p><strong>Email:</strong> <%= payment.email %></p>
                <% } %>
                <% if (payment.number) { %>
                    <p><strong>Phone:</strong> <%= payment.number %></p>
                <% } %>
            </div>

            <!-- Payment Summary -->
            <div class="section-title">Payment Summary</div>
            <div class="info-row">
                <p><strong>Amount Paid:</strong> $<%= Number(payment.amount).toFixed(2) %></p>
                <p><strong>Payment Method:</strong> <%= payment.method || "N/A" %></p>
                <p><strong>Status:</strong>
                    <% if (payment.status === 'Paid') { %>
                        <span class="badge bg-success">Paid</span>
                    <% } else { %>
                        <span class="badge bg-warning text-dark"><%= payment.status %></span>
                    <% } %>
                </p>
            </div>

            <hr>

            <!-- Footer Message -->
            <p class="text-muted mt-3">
                Thank you for shopping with <strong>The Black Market</strong>!  
                Your support keeps our marketplace running.
            </p>

        </div>

        <!-- Buttons Row -->
        <div class="mt-4 d-flex gap-3 flex-wrap no-print">

            <!-- PRINT / SAVE AS PDF -->
            <button class="btn btn-primary" onclick="window.print()">
                Print / Save as PDF
            </button>

            <!-- BACK TO ORDER HISTORY -->
            <a href="/orders" class="btn btn-info">
                View Order History
            </a>

            <!-- CONTINUE SHOPPING -->
            <a href="/shopping" class="btn btn-secondary">
                Continue Shopping
            </a>
        </div>

    </div>

</body>
</html>
