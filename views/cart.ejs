<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Your Cart - The Black Market</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">The Black Market</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="collapsibleNavbar">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/shopping">Shop</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/cart">View Cart</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logout">Logout</a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <!-- Cart Content -->
    <div class="container">
        <h2 class="mt-4">Your Shopping Cart</h2>

        <% if (cart.length === 0) { %>

            <p>Your cart is empty.</p>
            <a href="/shopping" class="btn btn-secondary mt-3">Back to Shopping</a>

        <% } else { %>

            <table class="table table-bordered align-middle mt-3">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Image</th>
                        <th style="width: 180px;">Quantity</th>
                        <th>Total</th>
                        <th style="width: 160px;">Actions</th>
                    </tr>
                </thead>

                <tbody>

                    <% let total = 0; %>

                    <% for (let i = 0; i < cart.length; i++) { %>

                        <tr>

                            <td><%= cart[i].productName %></td>

                            <td>
                                <img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail">
                            </td>

                            <!-- UPDATE QUANTITY FORM (FIXED productid) -->
                            <td>
                                <form action="/cart/update/<%= cart[i].productid %>" method="POST" class="d-flex gap-2">
                                    <input 
                                        type="number" 
                                        name="quantity" 
                                        min="1" 
                                        class="form-control"
                                        value="<%= cart[i].quantity %>" 
                                        required
                                    >
                                    <button type="submit" class="btn btn-sm btn-primary">Update</button>
                                </form>
                            </td>

                            <td>
                                $<%= (cart[i].price * cart[i].quantity).toFixed(2) %>
                            </td>

                            <!-- REMOVE ITEM FORM (FIXED productid) -->
                            <td>
                                <form action="/cart/remove/<%= cart[i].productid %>" method="POST" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                </form>
                            </td>

                        </tr>

                        <% total += cart[i].price * cart[i].quantity; %>

                    <% } %>

                </tbody>
            </table>

            <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mt-3 gap-3">

                <h4 class="mb-0">Total: $<%= total.toFixed(2) %></h4>

                <div class="d-flex flex-wrap gap-2">

                    <!-- CLEAR CART FORM -->
                    <form action="/cart/clear" method="POST" class="d-inline">
                        <button type="submit" class="btn btn-outline-danger">
                            Clear Cart
                        </button>
                    </form>

                    <a href="/shopping" class="btn btn-secondary">
                        Back to Shopping
                    </a>

                    <a href="/checkout" class="btn btn-success">
                        Checkout
                    </a>

                </div>

            </div>

        <% } %>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
