<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Checkout - The Black Market</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-dark text-white">

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-black navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">The Black Market</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Checkout Content -->
  <div class="container mt-5 mb-5">

    <h2 class="mb-4">Checkout</h2>

    <div class="row">
      <!-- Checkout Form -->
      <div class="col-md-6">
        <form action="/checkout" method="POST" class="bg-secondary p-4 rounded">

          <div class="mb-3">
            <label for="fullName" class="form-label">Full Name</label>
            <input
              type="text"
              class="form-control"
              id="fullName"
              name="fullName"
              required
            >
          </div>

          <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <textarea
              class="form-control"
              id="address"
              name="address"
              rows="3"
              required
            ></textarea>
          </div>

          <div class="mb-3">
            <label for="postalCode" class="form-label">Postal Code</label>
            <input
              type="text"
              class="form-control"
              id="postalCode"
              name="postalCode"
              pattern="\d{6}"
              maxlength="6"
              placeholder="6-digit postal code"
              required
            >
          </div>

          <div class="mb-3">
            <label for="mobileNumber" class="form-label">Mobile Number</label>
            <input
              type="text"
              class="form-control"
              id="mobileNumber"
              name="mobileNumber"
              pattern="\d{8}"
              maxlength="8"
              placeholder="8-digit mobile number"
              required
            >
          </div>

          <button type="submit" class="btn btn-success w-100 mt-2">
            Place Order
          </button>

        </form>
      </div>

      <!-- Optional Order Summary (only shows if cart is provided) -->
      <div class="col-md-6 mt-4 mt-md-0">
        <% if (typeof cart !== 'undefined' && cart.length > 0) { %>
          <div class="bg-secondary p-4 rounded">
            <h4>Order Summary</h4>
            <table class="table table-dark table-striped mt-3">
              <thead>
                <tr>
                  <th>Product</th>
                  <th>Qty</th>
                  <th>Subtotal</th>
                </tr>
              </thead>
              <tbody>
                <% let total = 0; %>
                <% cart.forEach(item => { %>
                  <tr>
                    <td><%= item.productName %></td>
                    <td><%= item.quantity %></td>
                    <td>$<%= (item.price * item.quantity).toFixed(2) %></td>
                  </tr>
                  <% total += item.price * item.quantity; %>
                <% }) %>
              </tbody>
            </table>
            <h5 class="mt-3">Total: $<%= total.toFixed(2) %></h5>
          </div>
        <% } else { %>
          <p>Your cart is empty. <a href="/shopping" class="text-info">Continue shopping</a>.</p>
        <% } %>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
