<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Order Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-dark text-white">

<div class="container mt-5">

    <h2 class="mb-3">Order Details â€” Order #<%= orderID %></h2>

    <table class="table table-dark table-bordered">
        <thead>
            <tr>
                <th>Product</th>
                <th>Qty</th>
                <th>Price</th>
                <th>Subtotal</th>
            </tr>
        </thead>

        <tbody>
            <% items.forEach(i => { %>
                <tr>
                    <td><%= i.productName %></td>
                    <td><%= i.quantity %></td>
                    <td>$<%= i.price.toFixed(2) %></td>
                    <td>$<%= (i.price * i.quantity).toFixed(2) %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <a href="/admin/orders" class="btn btn-secondary mt-3">Back</a>
</div>

</body>
</html>
