<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= product.name %> - The Black Market</title>

    <!-- Tailwind CDN -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            background-color: #ffffff;
        }
    </style>
</head>

<body class="min-h-screen">

    <!-- â­ SIMPLE PRODUCT PAGE HEADER -->
    <header class="sticky top-0 z-50 bg-black border-b border-gray-700 w-full">
        <div class="max-w-7xl mx-auto px-8 py-4 flex items-center justify-between">

            <!-- Logo (Back to shopping) -->
            <a href="/shopping" class="text-white text-2xl font-bold">
                The Black Market
            </a>

            <!-- Cart -->
            <a href="/cart" class="relative text-white hover:text-gray-300">
                <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 
                        13l-2.293 2.293c-.63.63-.184 
                        1.707.707 1.707H17m0 
                        0a2 2 0 100 4 2 2 0 
                        000-4zm-8 2a2 2 0 
                        11-4 0 2 2 0 014 0z" />
                </svg>

                <span
                    class="absolute -top-2 -right-2 bg-red-600 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">
                    <%= typeof cartCount !== 'undefined' ? cartCount : 0 %>
                </span>
            </a>

        </div>
    </header>

    <!-- MAIN CONTENT -->
    <main class="max-w-6xl mx-auto px-6 py-10">

        <h1 class="text-4xl font-bold text-center mb-10">Product Details</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-10 items-start">

            <!-- PRODUCT IMAGE -->
            <div class="flex justify-center">
                <img src="/images/<%= product.image %>"
                    alt="<%= product.name %>"
                    class="max-w-full rounded-xl shadow-lg" />
            </div>

            <!-- PRODUCT INFO -->
            <div>

                <h2 class="text-3xl font-bold mb-4"><%= product.name %></h2>

                <p class="text-lg">
                    <span class="font-semibold">Description:</span><br>
                    <%= product.description %>
                </p>

                <p class="mt-4 text-lg">
                    <span class="font-semibold">Weight:</span>
                    <%= product.weight %>
                </p>

                <p class="mt-2 text-lg">
                    <span class="font-semibold">Price:</span>
                    $<%= product.price.toFixed(2) %>
                </p>

                <!-- QUANTITY SELECT -->
                <form action="/addToCart/<%= product.productId %>" method="POST" class="mt-6">

                    <label for="quantity" class="font-semibold">Select Quantity:</label>

                    <input type="number" id="quantity" name="quantity"
                        class="border rounded w-24 p-2 ml-2"
                        min="1" value="1" required />

                    <button type="submit"
                        class="block mt-5 bg-green-600 hover:bg-green-700 text-white px-5 py-2 rounded">
                        Add to Cart
                    </button>
                </form>

                <!-- BACK BUTTON -->
                <button onclick="history.back()"
                    class="mt-6 px-5 py-2 bg-gray-600 hover:bg-gray-700 text-white rounded">
                    Back
                </button>

            </div>
        </div>

    </main>

</body>
    
</html>
